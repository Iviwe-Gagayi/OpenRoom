

generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String    @id
  email    String    @unique
  bookings Booking[]
}

model Room {
  id       String    @id @default(cuid())
  name     String    @unique
  location String?
  bookings Booking[]
}

model Booking {
  id        String   @id @default(cuid())
  startTime DateTime
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  room      Room     @relation(fields: [roomId], references: [id])
  roomId    String

  @@unique([roomId, startTime])
}


